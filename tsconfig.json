{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    },
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false,
  "noUnusedParameters": true
}
